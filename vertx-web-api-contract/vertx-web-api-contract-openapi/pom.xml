              <!--<artifactSet>-->
                <!--<includes>-->
                <!--</includes>-->
              <!--</artifactSet>-->
            <!--</configuration>-->
          <!--</execution>-->
        <!--</executions>-->
      <!--</plugin>-->
    </plugins>
  </build>

</project>
